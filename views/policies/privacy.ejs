<% layout('layouts/boilerplate2') %>

<!-- Hero Section -->
<section class="page-hero-section">
    <div class="page-hero-background">
        <div class="page-hero-overlay"></div>
    </div>
    <div class="container">
        <div class="page-hero-content">
            <div class="page-hero-icon">
                <i class="fas fa-user-shield"></i>
            </div>
            <h1 class="page-hero-title">Privacy Policy</h1>
            <p class="page-hero-subtitle">Your privacy is our priority</p>
        </div>
    </div>
</section>

<!-- Privacy Content Section -->
<section class="page-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 mx-auto">
                <!-- Last Updated -->
                <div class="last-updated">
                    <i class="fas fa-calendar-alt"></i>
                    <span>Last Updated: January 2024</span>
                </div>

                <!-- Introduction -->
                <div class="content-card highlight-card">
                    <div class="content-card-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h2 class="content-card-title">Our Commitment to Your Privacy</h2>
                    <p class="content-card-text">
                        At <strong>Movie Zilla</strong>, we respect your privacy and are committed to protecting your personal information. This privacy policy outlines the types of information we collect, how we use it, and the measures we take to safeguard your data.
                    </p>
                </div>

                <!-- Information Collection -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-database"></i>
                    </div>
                    <h2 class="content-card-title">Information We Collect</h2>
                    <p class="content-card-text mb-4">
                        We may collect various types of information from you when you use our website:
                    </p>
                    
                    <div class="info-categories">
                        <div class="info-category">
                            <div class="info-category-header">
                                <i class="fas fa-user"></i>
                                <h4>Personal Information</h4>
                            </div>
                            <ul class="feature-list">
                                <li><i class="fas fa-check"></i> Name and email address</li>
                                <li><i class="fas fa-check"></i> Contact information you provide voluntarily</li>
                                <li><i class="fas fa-check"></i> User preferences and settings</li>
                                <li><i class="fas fa-check"></i> Account credentials (if you create an account)</li>
                            </ul>
                        </div>

                        <div class="info-category">
                            <div class="info-category-header">
                                <i class="fas fa-chart-line"></i>
                                <h4>Usage Information</h4>
                            </div>
                            <ul class="feature-list">
                                <li><i class="fas fa-check"></i> Pages visited and time spent on site</li>
                                <li><i class="fas fa-check"></i> Browser type and device information</li>
                                <li><i class="fas fa-check"></i> IP address and location data</li>
                                <li><i class="fas fa-check"></i> Cookies and similar tracking technologies</li>
                            </ul>
                        </div>

                        <div class="info-category">
                            <div class="info-category-header">
                                <i class="fas fa-comments"></i>
                                <h4>Interactive Information</h4>
                            </div>
                            <ul class="feature-list">
                                <li><i class="fas fa-check"></i> Comments and reviews you post</li>
                                <li><i class="fas fa-check"></i> Ratings and feedback</li>
                                <li><i class="fas fa-check"></i> Survey responses</li>
                                <li><i class="fas fa-check"></i> Customer support communications</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Use of Information -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-tasks"></i>
                    </div>
                    <h2 class="content-card-title">How We Use Your Information</h2>
                    <p class="content-card-text mb-4">
                        We use your personal information for the following purposes:
                    </p>
                    
                    <div class="usage-grid">
                        <div class="usage-item">
                            <i class="fas fa-cog"></i>
                            <h4>Service Improvement</h4>
                            <p>To provide, maintain, and improve our services and user experience</p>
                        </div>
                        <div class="usage-item">
                            <i class="fas fa-envelope"></i>
                            <h4>Communication</h4>
                            <p>To respond to inquiries and send important updates about our services</p>
                        </div>
                        <div class="usage-item">
                            <i class="fas fa-user-cog"></i>
                            <h4>Personalization</h4>
                            <p>To customize content and recommendations based on your preferences</p>
                        </div>
                        <div class="usage-item">
                            <i class="fas fa-bullhorn"></i>
                            <h4>Marketing</h4>
                            <p>To send promotional materials (you can opt-out anytime)</p>
                        </div>
                        <div class="usage-item">
                            <i class="fas fa-chart-bar"></i>
                            <h4>Analytics</h4>
                            <p>To analyze usage patterns and improve website performance</p>
                        </div>
                        <div class="usage-item">
                            <i class="fas fa-shield-alt"></i>
                            <h4>Security</h4>
                            <p>To protect against fraud, abuse, and unauthorized access</p>
                        </div>
                    </div>
                </div>

                <!-- Data Security -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h2 class="content-card-title">Data Security Measures</h2>
                    <p class="content-card-text">
                        We implement appropriate technical and organizational measures to protect your personal information from unauthorized access, disclosure, alteration, or destruction. Our security measures include:
                    </p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> SSL/TLS encryption for data transmission</li>
                        <li><i class="fas fa-check"></i> Regular security audits and updates</li>
                        <li><i class="fas fa-check"></i> Secure server infrastructure</li>
                        <li><i class="fas fa-check"></i> Limited access to personal data by authorized personnel only</li>
                        <li><i class="fas fa-check"></i> Regular backups and disaster recovery plans</li>
                    </ul>
                    <div class="security-note">
                        <i class="fas fa-info-circle"></i>
                        <p>
                            <strong>Please Note:</strong> While we strive to protect your information, no method of transmission over the internet or electronic storage is 100% secure. We cannot guarantee absolute security but are committed to maintaining the highest standards of data protection.
                        </p>
                    </div>
                </div>

                <!-- Cookies Policy -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-cookie-bite"></i>
                    </div>
                    <h2 class="content-card-title">Cookies and Tracking Technologies</h2>
                    <p class="content-card-text">
                        We use cookies and similar tracking technologies to enhance your browsing experience. You can control cookie preferences through your browser settings.
                    </p>
                    <div class="cookie-types">
                        <div class="cookie-type">
                            <h4><i class="fas fa-cookie"></i> Essential Cookies</h4>
                            <p>Required for basic website functionality - cannot be disabled</p>
                        </div>
                        <div class="cookie-type">
                            <h4><i class="fas fa-chart-pie"></i> Analytics Cookies</h4>
                            <p>Help us understand how visitors use our website</p>
                        </div>
                        <div class="cookie-type">
                            <h4><i class="fas fa-ad"></i> Marketing Cookies</h4>
                            <p>Used to deliver relevant advertisements</p>
                        </div>
                    </div>
                </div>

                <!-- Third-Party Services -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h2 class="content-card-title">Third-Party Services</h2>
                    <p class="content-card-text">
                        We may use third-party services that collect, monitor, and analyze information to improve our service:
                    </p>
                    <ul class="feature-list">
                        <li><i class="fas fa-check"></i> Google Analytics for website analytics</li>
                        <li><i class="fas fa-check"></i> TMDB API for movie data and content</li>
                        <li><i class="fas fa-check"></i> Advertising partners for relevant ads</li>
                        <li><i class="fas fa-check"></i> Payment processors (if applicable)</li>
                    </ul>
                    <p class="content-card-text mt-3">
                        These third parties have their own privacy policies governing their use of your information.
                    </p>
                </div>

                <!-- Your Rights -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-user-check"></i>
                    </div>
                    <h2 class="content-card-title">Your Privacy Rights</h2>
                    <p class="content-card-text mb-4">
                        You have the following rights regarding your personal information:
                    </p>
                    <div class="rights-grid">
                        <div class="right-item">
                            <i class="fas fa-eye"></i>
                            <h4>Access</h4>
                            <p>Request a copy of your personal data</p>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-edit"></i>
                            <h4>Correction</h4>
                            <p>Update or correct inaccurate information</p>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-trash-alt"></i>
                            <h4>Deletion</h4>
                            <p>Request deletion of your data</p>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-ban"></i>
                            <h4>Opt-Out</h4>
                            <p>Unsubscribe from marketing communications</p>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-download"></i>
                            <h4>Portability</h4>
                            <p>Receive your data in a portable format</p>
                        </div>
                        <div class="right-item">
                            <i class="fas fa-hand-paper"></i>
                            <h4>Object</h4>
                            <p>Object to processing of your data</p>
                        </div>
                    </div>
                    <div class="rights-contact">
                        <p>To exercise any of these rights, please <a href="/contact">contact us</a>.</p>
                    </div>
                </div>

                <!-- Children's Privacy -->
                <div class="content-card alert-card">
                    <div class="content-card-icon">
                        <i class="fas fa-child"></i>
                    </div>
                    <h2 class="content-card-title">Children's Privacy</h2>
                    <p class="content-card-text">
                        Our services are not intended for children under the age of 13. We do not knowingly collect personal information from children under 13. If you believe we have collected information from a child under 13, please contact us immediately.
                    </p>
                </div>

                <!-- Policy Changes -->
                <div class="content-card">
                    <div class="content-card-icon">
                        <i class="fas fa-sync-alt"></i>
                    </div>
                    <h2 class="content-card-title">Changes to This Policy</h2>
                    <p class="content-card-text">
                        We may update this privacy policy from time to time to reflect changes in our practices or for legal, operational, or regulatory reasons. Any changes will be posted on this page with an updated "Last Modified" date. We encourage you to review our policy periodically to stay informed about how we are protecting your information.
                    </p>
                    <div class="update-notification">
                        <i class="fas fa-bell"></i>
                        <p>For significant changes, we will notify you via email or through a prominent notice on our website.</p>
                    </div>
                </div>

                <!-- Contact -->
                <div class="cta-section">
                    <h2 class="cta-title">Questions About Your Privacy?</h2>
                    <p class="cta-description">We're here to help with any privacy-related concerns</p>
                    <a href="/contact" class="btn-cta btn-cta-primary">
                        <i class="fas fa-envelope"></i> Contact Privacy Team
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>