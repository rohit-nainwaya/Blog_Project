<% layout('layouts/boilerplate3') %>
<body>
    <h3 class="sticky">Top 10 Animated Movies & Shows</h3>
    
    <div class="container-fluid px-0">
        <div class="container mt-4">
            <ol id="movieList" class="list-group">
                <li class="list-group-item" id="toyStory"><a href="#" onclick="showMovieDetails('toyStory')">Toy Story (1995)</a></li>
                <li class="list-group-item" id="spiritedAway"><a href="#" onclick="showMovieDetails('spiritedAway')">Spirited Away (2001)</a></li>
                <li class="list-group-item" id="theLionKing"><a href="#" onclick="showMovieDetails('theLionKing')">The Lion King (1994)</a></li>
                <li class="list-group-item" id="findingNemo"><a href="#" onclick="showMovieDetails('findingNemo')">Finding Nemo (2003)</a></li>
                <li class="list-group-item" id="shrek"><a href="#" onclick="showMovieDetails('shrek')">Shrek (2001)</a></li>
                <li class="list-group-item" id="frozen"><a href="#" onclick="showMovieDetails('frozen')">Frozen (2013)</a></li>
                <li class="list-group-item" id="up"><a href="#" onclick="showMovieDetails('up')">Up (2009)</a></li>
                <li class="list-group-item" id="spiderVerse"><a href="#" onclick="showMovieDetails('spiderVerse')">Spider-Man: Into the Spider-Verse (2018)</a></li>
                <li class="list-group-item" id="insideOut"><a href="#" onclick="showMovieDetails('insideOut')">Inside Out (2015)</a></li>
                <li class="list-group-item" id="yourName"><a href="#" onclick="showMovieDetails('yourName')">Your Name (2016)</a></li>
            </ol>

            <div id="movieDetails" class="hidden mt-4">
                <button class="btn btn-danger mb-3" onclick="goBack()">Back to List</button>
                <h2 id="movieTitle" class="text-white"></h2>
                <p id="movieDescription" class="text-white"></p>
                <a id="ottLink" href="#" class="btn btn-primary mb-3" target="_blank">Watch on OTT Platform</a>
                <div class="trailer">
                    <h3 class="text-white">Movie Trailer</h3>
                    <div class="iframe-container">
                        <iframe id="movieTrailer" width="560" height="315" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="cast">
                    <h3 class="text-white">Cast</h3>
                    <div class="row" id="castList"></div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/JS/animation.js"></script>
</body>
</html>