<% layout('layouts/boilerplate3') %>
<body>
    <h3 class="sticky">Top 10 Action Movies & Shows</h3>
    <div class="container-fluid px-0">
        <div class="container mt-4">
            <ol id="movieList" class="list-group">
                <li class="list-group-item" id="1"><a href="#" onclick="showMovieDetails('dieHard')">Die Hard (1988)</a></li>
                <li class="list-group-item" id="2"><a href="#" onclick="showMovieDetails('madMax')">Mad Max: Fury Road (2015)</a></li>
                <li class="list-group-item" id="3"><a href="#" onclick="showMovieDetails('darkKnight')">The Dark Knight (2008)</a></li>
                <li class="list-group-item" id="4"><a href="#" onclick="showMovieDetails('terminator2')">Terminator 2: Judgment Day (1991)</a></li>
                <li class="list-group-item" id="5"><a href="#" onclick="showMovieDetails('matrix')">The Matrix (1999)</a></li>
                <li class="list-group-item" id="6"><a href="#" onclick="showMovieDetails('gladiator')">Gladiator (2000)</a></li>
                <li class="list-group-item" id="7"><a href="#" onclick="showMovieDetails('inception')">Inception (2010)</a></li>
                <li class="list-group-item" id="8"><a href="#" onclick="showMovieDetails('johnWick')">John Wick (2014)</a></li>
                <li class="list-group-item" id="9"><a href="#" onclick="showMovieDetails('raidRedemption')">The Raid: Redemption (2011)</a></li>
                <li class="list-group-item" id="10"><a href="#" onclick="showMovieDetails('killBillVolume1')">Kill Bill: Volume 1 (2003)</a></li>
            </ol>

            <div id="movieDetails" class="hidden mt-4">
                <button class="btn btn-danger mb-3" onclick="goBack()">Back to List</button>
                <h2 id="movieTitle" class="text-white"></h2>
                <p id="movieDescription" class="text-white"></p>
                <a id="ottLink" href="#" class="btn btn-primary mb-3" target="_blank">Watch on OTT Platform</a>
                <div class="trailer">
                    <h3 class="text-white">Movie Trailer</h3>
                    <div class="iframe-container">
                        <iframe id="movieTrailer" width="560" height="315" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>
                </div>
                <div class="cast">
                    <h3 class="text-white">Cast</h3>
                    <div class="row" id="castList"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/JS/action.js"></script>
</body>
</html>