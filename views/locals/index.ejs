<% layout('layouts/boilerplate') %>
<% /* Page body starts */ %>
    <header class="text-center my-4">
        
    </header>
    <main>
        <div class="homepage-content">
            <div id="carouselExampleIndicators" class="carousel slide movie-hero" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="6" aria-label="Slide 7"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active" type="button">
                        <a href="/Popular_Movies">
                            <img src="assets/home_page/popular.jpeg" class="d-block w-100" alt="Popualr">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Popular</h5>
                                <p>Discover the most popular and trending films of the moment.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/Trending_Movies">
                            <img src="/assets/home_page/satoru-gojo-8k-3840x2160-15315.jpg" class="d-block w-100" alt="Drama">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Trending This Week</h5>
                                <p>Catch up on what's trending this week.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item" type="button">
                        <a href="/Upcoming_Movies">
                            <img src="assets/home_page/sci-fi.jpg" class="d-block w-100" alt="Upcoming">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Upcoming</h5>
                                <p>Stay tuned for exciting new releases and upcoming films.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item" type="button">
                        <a href="#">
                            <img src="assets/home_page/action.jpg" class="d-block w-100" alt="Action">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Action</h5>
                                <p>Experience the latest heart-pounding action films.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item">
                        <a href="/Top_Rated_Shows">
                            <img src="assets/home_page/mashle-magic-and-3840x2160-14851-min.jpeg" class="d-block w-100" alt="Comedy">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Top Rated Anime</h5>
                                <p>Explore the highest-rated anime series.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item" type="button">
                        <a href="#">
                            <img src="assets/home_page/romance.jpg" class="d-block w-100" alt="Romance">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Romance</h5>
                                <p>Indulge in the latest heartwarming romance stories.</p>
                            </div>
                        </a>
                    </div>
                    <div class="carousel-item" type="button">
                        <a href="#">
                            <img src="assets/home_page/horror.jpg" class="d-block w-100" alt="Horror">
                            <div class="carousel-caption d-none d-md-block movie-caption">
                                <h5>Horror</h5>
                                <p>Brace yourself for the latest spine-chilling horror films.</p>
                            </div>
                        </a>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

                <!-- Featured blog kept but moved down as a separate page section; homepage focuses on sections like IMDB -->
            </div>
            
            <!-- IMDB-like section rows: scripts can populate the containers by targeting the IDs below -->
            <section class="container">
                <div class="section-row">
                    <div class="section-header">
                        <h4 class="mb-0">Popular Movies</h4>
                        <a class="see-all-link" href="/Popular_Movies">See all</a>
                    </div>
                    <div id="popular-row" class="horizontal-scroll" aria-live="polite">
                        <!-- JS will insert movie tiles here -->
                    </div>
                </div>

                <div class="section-row">
                    <div class="section-header">
                        <h4 class="mb-0">Trending</h4>
                        <a class="see-all-link" href="/Trending_Movies">See all</a>
                    </div>
                    <div id="trending-row" class="horizontal-scroll"></div>
                </div>

                <div class="section-row">
                    <div class="section-header">
                        <h4 class="mb-0">Top Rated</h4>
                        <a class="see-all-link" href="/Top_Rated_Shows">See all</a>
                    </div>
                    <div id="toprated-row" class="horizontal-scroll"></div>
                </div>

                <div class="section-row">
                    <div class="section-header">
                        <h4 class="mb-0">Upcoming</h4>
                        <a class="see-all-link" href="/Upcoming_Movies">See all</a>
                    </div>
                    <div id="upcoming-row" class="horizontal-scroll"></div>
                </div>

                <div class="section-row">
                    <div class="section-header">
                        <h4 class="mb-0">Popular TV Shows</h4>
                        <a class="see-all-link" href="/Popular_Tv_Shows">See all</a>
                    </div>
                    <div id="popular-tv-row" class="horizontal-scroll"></div>
                </div>
            </section>
            <div class="row g-4 mt-5 movie-grid">
                
            </div>
        </div>
    </main>

    <section class="desc text-center my-5">
        <div class="container">
            <h2 class="mb-4">Stay informed with our timely and comprehensive coverage on everything from action-packed blockbusters to heartwarming dramas and side-splitting comedies.</h2>
            <p style="color: yellowgreen;" >Discover what's new, stay ahead of the trends, and never miss a beat with us!</p>
        </div>
    </section>

        <!-- Movie details modal for homepage tiles -->
        <div class="modal fade" id="homeMovieModal" tabindex="-1" aria-labelledby="homeMovieModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl modal-dialog-centered">
                <div class="modal-content bg-dark text-white">
                    <div class="modal-header">
                        <h5 class="modal-title" id="homeMovieTitle">Movie</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-5">
                                <img id="homeMoviePoster" src="/assets/home_page/alt.jpg" alt="poster" class="img-fluid rounded">
                                <p class="mt-2" id="homeMovieMeta" style="color:var(--muted)"></p>
                            </div>
                            <div class="col-md-7">
                                <p id="homeMovieOverview"></p>
                                <div id="homeCast" class="d-flex gap-2 flex-wrap mt-3"></div>
                                <div class="mt-3">
                                    <iframe id="homeMovieTrailer" width="100%" height="315" src="" title="Trailer" frameborder="0" allowfullscreen></iframe>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
